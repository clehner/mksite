#!/usr/bin/make -f

mds := $(patsubst %.md,%.html,$(wildcard *.md))
contents := $(patsubst %.content.html,%.html,$(wildcard *.content.html))
titles := $(patsubst %.content.html,%.title,$(wildcard *.content.html))

md2html := md2html.awk

index := index\(\.html\)\?

all: $(mds) $(contents)

%.title: _nav.txt
	@sed $< > $@ -n\
		-e '/^$*/{ s/^$*\S*\s*\(.*\)$$/\1/; s/\//\\\//g; p; }'\
		-e 's/^$(index)/./'

%.content.html: %.md
	@$(md2html) $< > $@

%.html: _template.html %.content.html %.nav.html %.title
	@echo rendering $@
	@sed $< > $@ \
		-e 's/{title}/$(shell cat $*.title)/g'\
		-e '/{content}/r $*.content.html'\
		-e '/{content}/d'\
		-e '/{nav}/r $*.nav.html'\
		-e '/{nav}/,/{\/nav}/d'

%.nav.html: _nav.html
	@sed $< > $@ \
		-e 's/href="$*\(\.html\)\?"/\0 class="active"/'\
		-e 's/"$(index)"/"."/'

getnavline := $(shell sed -n\
			'/{nav}/{ :loop; n; /{\/nav}/q; s/\//\\\//g; s/{name}/\\2/g; s/{link}/\\1/g; p; b loop; }'\
			 _template.html)

_nav.html: _nav.txt _template.html
	@echo rendering nav
	@sed -n 's/^\([^ ]*\) \(.*\)$$/$(call getnavline)/pg' _nav.txt > $@

clean:
	rm -f _nav.html *.nav.html $(mds) $(contents) $(titles)

.FORCE:
.PHONY: .FORCE clean
